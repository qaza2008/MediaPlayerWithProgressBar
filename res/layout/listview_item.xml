<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:qaza="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
            android:layout_width="wrap_content"
            android:background="#42c58c"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/play_btn"
                android:layout_width="90dp"
                android:scaleType="centerInside"
                android:background="#99000000"
                android:src="@drawable/voice_play_anim"
                android:layout_height="90dp"/>

        <com.androidso.app.view.RoundProgressBar
                android:id="@+id/rb_play_audio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                qaza:progress_reached_bar_height="2dp"
                android:layout_gravity="center"
                qaza:progress_unreached_bar_height="2dp"
                qaza:progress_reached_color="@color/play_soune_reached"
                qaza:progress_unreached_color="@color/play_soune_unreached"
                qaza:progress_text_visibility="invisible"
                qaza:progress_inner_color="#4c000000"
                android:layout_centerInParent="true"
                />
    </FrameLayout>
</LinearLayout>